@model Demo.Models.Book

@{
    ViewData["Title"] = "Details";
}

<h1>Book Details</h1>
<hr />
<div class="container col-md-10 card bg-dark">
    <div class="row">
        <div class="col-md-5 text-center">
            <img src="@Html.DisplayFor(model => model.ImageURL)" class="w-100" />
        </div>
        <div class="row col-md-7 card bg-dark">
            <dl class="row">
                <dt class="col-sm-3">
                    <label>Name:</label>
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ProductName)
                </dd>
                <dt class="col-sm-3">
                    <label>Description:</label>
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ShortDescription)
                </dd>
                <dt class="col-sm-3">
                    <label>Price:</label>
                </dt>
                <dd class="col-sm-10">
                    $@Html.DisplayFor(model => model.Price)
                </dd>
                </dd>
                <dt class="col-sm-3">
                    <label>Release date: </label>
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CreatedDate)
                </dd>
                <dt class="col-sm-3">
                    <label>Category: </label>
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Category.CategoryName)
                </dd>
                <dd class="col-sm-10">
                    <a asp-controller="Home" asp-action="addCart" asp-route-id="@Model.ProductID" class="btn btn-primary">Add to Cart</a>
                </dd>
                <dd class="col-sm-10">
                    <label>Contact to order: 0394123456</label>
                </dd>
            </dl>
        </div>
    </div>
</div>
