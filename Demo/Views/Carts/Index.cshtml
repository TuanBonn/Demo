@model IEnumerable<Demo.Models.Cart>

@{
    ViewData["Title"] = "Index";
}

<h1>Cart</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table text-light">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Book)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Book.ProductID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CartDetailID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CartDetailID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CartDetailID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
