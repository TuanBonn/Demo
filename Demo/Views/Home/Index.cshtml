@model IEnumerable<Demo.Models.Book>

@{
    ViewData["Title"] = "Home Page";
}

<br>
<div class="container col-md-10 text-center text-light">
    <div class="container mt-4">
        <div class="row">
            <div class="col">
                <form action="/search" method="post" class="">
                    <div class="form-group">
                        <input class="form-control" type="search" placeholder="Search by student's name" name="name" id=""
                               required>
                    </div>
                </form>
            </div>
            <div class="col">
                <select class="form-control" name="sort" id="" onchange="window.location.href=this.value">
                    <option value="#">Sort by</option>
                    <option value="/priceasc">Price gradually increases</option>
                    <option value="/pricedesc">Prices gradually decrease</option>
                    <option value="/nameasc">Names ascending</option>
                    <option value="/namedesc">Names descending</option>
                </select>
            </div>
        </div>
        <br>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-3">
                    <div class="card mb-4 bg-dark">
                        <a asp-action="Details" asp-route-id="@item.ProductID">
                            <img src="@Html.DisplayFor(modelItem => item.ImageURL)" width="150px" height="250px" />
                        </a>
                        <div class="card-body">
                            <h5 class="card-title">@item.ProductName</h5>
                            <p  class="card-text">$@item.Price</p>
                            <a href="#" class="btn btn-primary" style="width: 200px">Add to cart</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

